<h1>Каталог</h1>


{{#ifEditLvl user_lvl}}
<p class="add_link"><a href="/catalog/add">Добавить каталог</a></p>
{{/ifEditLvl}}


{{#if catalog.length}}
<div class="row">
    {{#each catalog}}
    <div class="col-sm-4 catalog-card">
        <div class="card">
            <a href="/catalog/{{id}}"><img class="card-img-top" src="{{img_url}}" href="/catalog/{{id}}"></a>
            <div class="card-body catalog-card-body">
                <h5 class="card-title">{{title}}</h5>
                <p class="card-text">{{discription}}</p>
            </div>
            <div class="card-footer bg-transparent">
                <p class="card-text">

                    <a class="btn btn-link btn-sm" style="margin-right: 2rem;" href="/catalog/{{id}}">Открыть</a>

                    {{#ifEditLvl @root.user_lvl}}
                    <a class="btn btn-link btn-sm" href="/catalog/{{id}}/edit?allow=true">Редактировать</a>
                    {{/ifEditLvl}}

                </p>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{else}}
<p>Каталог пуст</p>
{{/if}}