<div id="map" style="width: 100%; height: 100%"></div>
<input type="hidden" id="wms_url" value="{{map.url}}">
<input type="hidden" id="tile" value="{{map.tile}}">
<input type="hidden" id="projection" value="{{map.projection}}">
<div class="legend__btn">
    <p>
        <button class="btn btn-dark" type="button" id="legendBtn">
            Слои
            <img src="../../icons/layers.svg" alt="layers">
        </button>
    </p>
</div>

<div class="legend hidden" id="legendHidden">
    <div class="card card-body">
        <div id="check">

        </div>
    </div>
</div>


<div class="info hidden" id="infoHidden">
    <div class="card card-body">

        <h2 class="card-title" style="margin-bottom: 1rem;">Информация<button type="button" class="close"
                id="close_info">
                <span aria-hidden="true">&times;</span>
            </button></h2>

        <div id="info" class="info__content">
        </div>
    </div>
</div>


<div class="modal fade" id="map_load_modal" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static"
    data-keyboard="false">
    <div class="modal-dialog" role="document">
        <div class="modal-content" style="width: 400px;">
            <div class="modal-body">
                <h5 style="text-align: center;">Подождите, карта загружается</h5>
                <div class="spinner-border" style="display: block; margin-left: auto; margin-right: auto" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
            </div>
        </div>
    </div>
</div>