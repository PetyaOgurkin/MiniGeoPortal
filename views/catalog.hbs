<h1>Каталог</h1>

<a href="/catalog/add">Добавить каталог</a>

<div class="row">
    {{#if catalog.length}}
    {{#each catalog}}
    <div class="col s6">
        <div class="card">
            <div class="card-image">
                <img class="image" src="{{img_url}}">
                <span class="card-title">{{title}}</span>
            </div>
            <div class="card-content">
                <p>{{discription}}</p>
            </div>
            <div class="card-action">
                <a href="/catalog/{{id}}">Открыть</a>
            </div>
        </div>
    </div>
    {{/each}}
    {{else}}
    <p>Каталог пуст</p>
    {{/if}}
</div>